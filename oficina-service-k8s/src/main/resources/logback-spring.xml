<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender com formato JSON estruturado -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>ordemServicoId</includeMdcKeyName>
            <includeMdcKeyName>clienteId</includeMdcKeyName>
            <includeMdcKeyName>requestId</includeMdcKeyName>
            
            <customFields>{"service":"oficina-service","environment":"${ENVIRONMENT:-dev}"}</customFields>
            
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <version>version</version>
                <logger>logger</logger>
                <thread>thread</thread>
                <level>level</level>
                <levelValue>levelValue</levelValue>
                <message>message</message>
                <stackTrace>stackTrace</stackTrace>
            </fieldNames>
            
            <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>30</maxDepthPerThrowable>
                <maxLength>2048</maxLength>
                <shortenedClassNameLength>20</shortenedClassNameLength>
                <exclude>^sun\.reflect\..*\.invoke</exclude>
                <exclude>^net\.sf\.cglib\.proxy\.MethodProxy\.invoke</exclude>
                <rootCauseFirst>true</rootCauseFirst>
            </throwableConverter>
        </encoder>
    </appender>

    <!-- File Appender com formato JSON para análise posterior -->
    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/oficina-service.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/oficina-service.%d{yyyy-MM-dd}.json.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>ordemServicoId</includeMdcKeyName>
            <includeMdcKeyName>clienteId</includeMdcKeyName>
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <customFields>{"service":"oficina-service","environment":"${ENVIRONMENT:-dev}"}</customFields>
        </encoder>
    </appender>

    <!-- Appender específico para métricas de negócio -->
    <appender name="METRICS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/metrics.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/metrics.%d{yyyy-MM-dd}.json.gz</fileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <!-- Logger para métricas de negócio -->
    <logger name="br.com.grupo99.oficinaservice.metrics" level="INFO" additivity="false">
        <appender-ref ref="METRICS"/>
        <appender-ref ref="CONSOLE_JSON"/>
    </logger>

    <!-- Logger para ordens de serviço (tracking completo) -->
    <logger name="br.com.grupo99.oficinaservice.application.service.OrdemServicoApplicationService" level="INFO"/>
    
    <!-- Logger para integrações externas -->
    <logger name="br.com.grupo99.oficinaservice.infrastructure.integration" level="INFO"/>

    <!-- Logs do Spring Framework -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="DEBUG"/>
    
    <!-- Logs do Hibernate -->
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE_JSON"/>
        <appender-ref ref="FILE_JSON"/>
    </root>
</configuration>
